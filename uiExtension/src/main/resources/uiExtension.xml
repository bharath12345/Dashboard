<?xml version="1.0" encoding="UTF-8"?>

<ui-extension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="SampleUIExtension">

    <workspaces>
        <appsone-workspace id="ApplicationWorkspace" name="Application">

            <view-link ref="FinacleTableView" />

            <url-link id="externalLink"
                      url="${serverProtocol}://${host}:${requestBasedPort}/x.jsp"
                      label="ExternalLinkLabel"/>
        </appsone-workspace>

        <workspace id="TransactionWorkspace" label="TransactionWorkspaceLabel">
            <view-link ref="AllTransactionsTableView" />
            <view-link ref="ApplicationXTableView" />
        </workspace>
    </workspaces>

    <!-- TABLES -->

    <table-views>
        <table-view id="AllTransactionsTableView"
                    object-url="xxxx/yyyyy/zzzzz.action"
                    object-class="AllTransactionsObject"
                    label="AllTransactionsTableLabel" refresh-rate="180">

            <column attribute="TransactionName"
                    label="TransactionNameLabel"
                    width="70" display-text="false" sortable="false" filterable="true" />

            <column attribute="TransactionVolume"
                    label="TransactionVolumeLabel"
                    width="170" display-text="true" sortable="true" filterable="true" />
        </table-view>


        <table-view id="ApplicationXTableView"
                    object-url="/some.action"
                    object-class="ApplicationXObject"
                    label="ApplicationXLabel" refresh-rate="180">

            <view-filter ref="ColumnYFilter" />

            <column attribute="X" label="XLabel"
                    width="70" display-text="false" sortable="false" filterable="false" />

            <column attribute="Y" label="YLabel"
                    width="170" display-text="true" sortable="true" filterable="true" />

        </table-view>
    </table-views>

    <!-- FORMS -->

    <forms>
        <form id="AllTransactions_Form"
              label="AllTransactionsLabel"
              help-url="${serverProtocol}://${host}:${requestBasedPort}/help.html">

            <form-tab label="TrafficNodeFormLabel"
                      type="Summary"
                      object-url="/some.action"
                      object-class="ApplicationXObject">
                <fields>
                    <group-box label="General">
                        <lookup-field ref="XXXXX" label="XXXXXXX" />
                        <field label="fieldA" attribute="attributeA" />
                        <field label="fieldB" attribute="attributeB" />
                    </group-box>

                    <view-field ref="TrafficInterfaceTableView" filter-attribute="hostedNodeUuid" />
                    <nnm-view-field name="Incidents" />

                </fields>
            </form-tab>
        </form>
    </forms>

    <!-- OBJECT MODELS -->

    <object-model>
        <object-class id="AllTransactionsObject">
            <attribute id="attribOne"><string/></attribute>
            <attribute id="attribTwo"><enumeration/></attribute> <!-- Icon option for enumerations? -->
            <attribute id="attribThree"><boolean/></attribute>
            <attribute id="attribFour"><integer /></attribute>
            <nnm-reference-attribute id="TrafficInterfaceNNMId"
                                     name="entity_uuid" nnm-class="com.hp.ov.nms.model.core.Interface"
                                     nnm-key-property="uuid">
                <string />
            </nnm-reference-attribute>
            <filters>
                <filter id="TrafficIncidentStateTableFilter">
                    <data-filter attribute="TrafficIncidentThrState"
                                 operator="equals" value="EXCEEDED" />
                </filter>
            </filters>
        </object-class>
    </object-model>

    <enums>
        <enum id="ThresholdStateEnum">
            <enum-value key="EXCEEDED" label="ExceededStateLabel"
                        icon="code/HighUtilization.16.gif" icon-provided="false" />
            <enum-value key="NORMAL" label="NormalLabel"
                        icon="code/MediumUtilization.16.gif" icon-provided="false" />
            <enum-value key="NOTMONITORED" label="NotMonitoredLabel"
                        icon="code/NoUtilization.16.gif" icon-provided="false" />

        </enum>
    </enums>

    <labels>
        <label id="TransactionWorkspaceLabel">
            <label-value lang="en"></label-value>
            <label-value lang="ja"></label-value>
            <label-value lang="zh-CN"></label-value>
            <label-value lang="ko"></label-value>
        </label>
    </labels>
</ui-extension>
