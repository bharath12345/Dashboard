<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- The package element provides a mechanism by which to group related 
		Struts 2 components, such as actions and results, into logical units. -->
	<package name="componentMatrix" namespace="/component" extends="json-default">
		<action name="ComponentMatrixMeta" class="com.appnomic.noc.action.component.ComponentMatrixMetaAction">
			<result type="json"></result>
                <param name="enableGZIP">true</param>
                <param name="encoding">UTF-8</param>
                <param name="noCache">true</param>
                <param name="excludeNullProperties">true</param>
		</action>
		<action name="ComponentMatrixZones" class="com.appnomic.noc.action.component.ComponentMatrixZones">
			<result type="json"></result>
                <param name="enableGZIP">true</param>
                <param name="encoding">UTF-8</param>
                <param name="noCache">true</param>
                <param name="excludeNullProperties">true</param>
		</action>
	</package>
</struts>
